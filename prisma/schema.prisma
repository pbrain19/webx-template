// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  uuid      String
  name      String
  posts     Post[]
  comments  Comment[]
  responses Response[]
  deleted   DateTime?
}

model Post {
  id          Int       @id @default(autoincrement())
  uuid        String
  title       String
  description String
  published   Boolean   @default(true)
  authorId    Int
  author      User      @relation(fields: [authorId], references: [id])
  deleted     DateTime?
}

model Comment {
  id        Int        @id @default(autoincrement())
  uuid      String
  message   String
  authorId  Int
  author    User       @relation(fields: [authorId], references: [id])
  responses Response[]
  deleted   DateTime?
}

model Response {
  id        Int       @id @default(autoincrement())
  uuid      String
  response  String
  commentId Int
  comment   Comment   @relation(fields: [commentId], references: [id])
  authorId  Int
  author    User      @relation(fields: [authorId], references: [id])
  deleted   DateTime?
}
